<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="130dp"
    app:cardCornerRadius="30dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/yellow"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_img_menu"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_title_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama menu"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_img_menu"
            app:layout_constraintStart_toStartOf="@+id/iv_img_menu"
            app:layout_constraintTop_toBottomOf="@+id/iv_img_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>