<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".KostumActivity">

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:text="Kostume"
        android:textColor="@color/secondaryColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/makananpokok"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:text="Makanan Pokok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/btn_hewani"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:text="Lauk Hewani"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/makananpokok"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_nabati"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:text="Lauk Nabati"
        android:layout_below="@id/btn_hewani"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_hidangan"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:text="Hidagangan Sayur"
        android:layout_below="@id/btn_nabati"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_selingan"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:text="Selingan"
        android:layout_below="@id/btn_hidangan"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_buah"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@color/primaryColor"
        android:layout_below="@+id/btn_selingan"
        android:text="Buah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>