<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".DataBayiActivity">

    <TextView
        android:id="@+id/tv_databayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_bayi"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textColor="@color/secondaryColor"
        />

    <ImageView
        android:id="@+id/iv_logo_db"
        android:layout_width="300dp"
        android:layout_height="138dp"
        android:src="@drawable/baby"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_databayi"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/edt_beratbadan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_db"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/secondaryColor"
        android:padding="10dp"
        android:hint="@string/berat_badan_kg"
        android:textColorHint="@color/primaryColor"
        android:textColor="@color/primaryColor"
        android:textSize="12sp"
        android:inputType="numberDecimal"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_range1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_beratbadan"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="@string/range_berat_1_25_kg"
        android:textColor="@color/secondaryColor"
        android:textSize="10sp" />

        <EditText
            android:id="@+id/edt_tinggibadan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/secondaryColor"
            android:hint="@string/tinggi_badan_cm"
            android:textColorHint="@color/primaryColor"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_range1"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:inputType="numberDecimal"
            android:textStyle="normal"
            android:textColor="@color/primaryColor"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tv_range2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/range_tinggi_1_100_kg"
            android:textSize="11sp"
            android:layout_margin="10dp"
            android:layout_below="@id/edt_tinggibadan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/secondaryColor"
            android:padding="5dp"
            />

    <EditText
        android:id="@+id/edt_pilihumurbayi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_range2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/secondaryColor"
        android:padding="10dp"
        android:hint="@string/pilih_umur_bayi_bulan"
        android:textColorHint="@color/primaryColor"
        android:textColor="@color/primaryColor"
        android:textSize="12sp"
        android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_jeniskelamin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/secondaryColor"
            android:hint="@string/pilih_jenis_kelamin"
            android:textColorHint="@color/primaryColor"
            android:layout_below="@+id/edt_pilihumurbayi"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textStyle="normal"
            android:inputType="numberDecimal"
            android:textColor="@color/primaryColor"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/btn_slnjt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="@string/selanjutnya"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:layout_below="@id/edt_jeniskelamin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/secondaryColor"
            />
        


</RelativeLayout>