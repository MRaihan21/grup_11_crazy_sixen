<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buat_akun_baru"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        style="@style/title"
        />

    <ImageView
        android:id="@+id/iv_data_bayi"
        android:layout_width="300dp"
        android:layout_height="138dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="20dp"
        android:src="@drawable/baby"
        android:contentDescription="@string/image_baby" />

    <LinearLayout
        android:id="@+id/ll_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_data_bayi"
        android:gravity="center"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edt_username_regis"
            android:layout_width="224dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:hint="@string/username"
            android:background="@drawable/button_shape"
            style="@style/editTextName"
            android:autofillHints="username"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/edt_email_regis"
            android:layout_width="224dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:hint="@string/email"
            android:background="@drawable/button_shape"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            style="@style/editTextName"
            />

        <EditText
            android:id="@+id/edt_password_regis"
            android:layout_width="224dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:hint="@string/password"
            android:background="@drawable/button_shape"
            android:autofillHints="password"
            android:inputType="textPassword"
            style="@style/editTextName"
            />

        <EditText
            android:id="@+id/edt_confirm_regis"
            android:layout_width="224dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:hint="@string/konfirmasi_password"
            android:background="@drawable/button_shape"
            android:autofillHints="password"
            android:inputType="textPassword"
            style="@style/editTextName"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_loginregis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sudah_punya_akun"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/secondaryColor"
            />

        <TextView
            android:id="@+id/tv_masuksekarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/masuk_sekarang"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

        <Button
            android:id="@+id/btn_regis"
            style="@style/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondaryColor"
            android:text="@string/register"
            android:textColor="@color/primaryColor"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>



</RelativeLayout>