<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakananSelinganActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_makananselingan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/makanan_selingan"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_pisang"
            android:layout_width="340dp"
            android:layout_height="300dp"
            android:src="@drawable/pisang"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>



        <TextView
            android:id="@+id/tv_detail_bahan"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/detail_makanan_selingan"
            android:background="@color/secondaryColor"
            android:textColor="@color/primaryColor"
            android:textSize="13sp"
            android:padding="16dp"
            />



    </LinearLayout>

</ScrollView>